{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "ES5",
        "lib": ["ES2020"],
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "declaration": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./*"
            ],
            "@lib/*": [
                "./source/lib/*"
            ],
            "@bin/*": [
                "./source/bin/*"
            ],
            "@test/*": [
                "./test/*"
            ],
            "@lib": [
                "./source/lib"
            ],
            "@bin": [
                "./source/bin"
            ],
            "@test": [
                "./test"
            ]
        },
        "outDir": "./dist",
    },
    "include": ["source", "test"]
}